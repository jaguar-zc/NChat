<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.flyants.book.custom.Header
        android:id="@+id/idHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></org.flyants.book.custom.Header>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chat_background_color"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="62dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/u0" />
            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/toolbar_size"
                android:text="飞奔的蚂蚁"/>
            <TextView
                android:id="@+id/chat_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/small_size"
                android:text="chat号：888888"/>

            <ImageView
                android:id="@+id/me_qrcode"
                android:layout_margin="@dimen/layout_margin_top"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/me_qrcode"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/small_size"
                android:textColor="@color/gray"
                android:text="用Chat加我好友"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>