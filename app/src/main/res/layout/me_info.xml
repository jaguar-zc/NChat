        <org.flyants.component.scrollview.ReboundScrollView
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@null"
                        android:gravity="center"
                        android:paddingTop="30dp">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:background="@mipmap/u0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/nickName"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:text="飞奔的蚂蚁"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/toolbar_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/chat_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="chat号：888888"
                            android:textSize="@dimen/small_size" />

                        <TextView
                            android:id="@+id/people_introduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="这个人很懒，什么都没留下"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/small_size" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/peopleAssist"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/ae8" />

                            <TextView
                                android:id="@+id/peopleAssistCount"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:text="0"
                                android:textColor="@color/black_text"
                                android:textSize="@dimen/small_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/send_message"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/afo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:text="发消息"
                                android:textColor="@color/black_text"
                                android:textSize="@dimen/small_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/send_dynamic"
                                android:layout_width="39dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/ag9" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:text="发动态"
                                android:textColor="@color/black_text"
                                android:textSize="@dimen/small_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/edit_people_info"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/adv" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:text="编辑资料"
                                android:textColor="@color/black_text"
                                android:textSize="@dimen/small_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_margin_top"
                        android:background="@color/windowBackground"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/ui_padding"
                        android:paddingRight="@dimen/ui_padding">

                        <TextView
                            android:id="@+id/tap_dynamic"
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="动态"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/title_selected_size" />

                        <TextView
                            android:id="@+id/tap_extinfo"
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="资料"
                            android:textColor="@color/black_text"
                            android:textSize="@dimen/title_selected_size"
                            android:textStyle="bold"/>
                    </LinearLayout>


                    <FrameLayout
                        android:id="@+id/frameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </FrameLayout>

                </LinearLayout>


            </LinearLayout>
        </org.flyants.component.scrollview.ReboundScrollView>
