<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/me_bg"
    android:orientation="vertical">

    <!--<org.flyants.book.custom.Header-->
        <!--android:id="@+id/idHeader"-->
        <!--android:background="@null"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
    <!--</org.flyants.book.custom.Header>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@null">
        <ImageView
            android:id="@+id/idHeader"
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/adb"/>

    </LinearLayout>

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:background="@mipmap/u0" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/toolbar_size"
                    android:text="飞奔的蚂蚁"/>

                <TextView
                    android:id="@+id/chat_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="chat号：888888"
                    android:textSize="@dimen/small_size" />
                <TextView
                    android:id="@+id/people_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/small_size"
                    android:textColor="@color/gray"
                    android:text="这个人很懒，什么都没留下"/>
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/peopleAssist"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ae8"/>
                <TextView
                    android:id="@+id/peopleAssistCount"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_size"
                    android:text="0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/send_message"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/afo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_size"
                    android:text="发消息"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/send_dynamic"
                    android:layout_width="39dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ag9" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_size"
                    android:text="发动态"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/edit_people_info"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/adv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_size"
                    android:text="编辑资料"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_margin_top"></View>
        <LinearLayout
            android:paddingLeft="@dimen/ui_padding"
            android:paddingRight="@dimen/ui_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="@dimen/title_selected_size"
                    android:layout_margin="@dimen/item_margin_top"
                    android:textColor="@color/itemTextColor"
                    android:text="动态"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/item_margin_top"
                    android:text="资料"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_selected_size"
                    android:textStyle="bold" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_selected_size"
                    android:textStyle="bold"
                    android:text="基本信息"/>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_size"
                    android:text="所在地：   四川成都"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    </com.liaoinstan.springview.widget.SpringView>

</LinearLayout>