<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/ui_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:text="登录"
            android:textColor="@color/black_text"
            android:textSize="@dimen/app_name_big_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_setting_height"
                android:layout_marginTop="@dimen/item_margin_top"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/login_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/input_phone"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/title_selected_size" />
                <!--<TextView-->
                <!--android:id="@+id/get_sms_code"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="30dp"-->
                <!--android:background="@color/light_hit"-->
                <!--android:padding="5dp"-->
                <!--android:text="获取验证码"-->
                <!--android:textColor="@color/itemTextColor"-->
                <!--android:textSize="@dimen/item_size" />-->
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/error_msg"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/red"
                android:textSize="@dimen/small_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="75dp" ></View>
        <TextView
            android:id="@+id/get_sms_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:background="@drawable/login_btn"
            android:textSize="@dimen/toolbar_size"
            android:textStyle="bold"
            android:text="获取验证码"/>

    </LinearLayout>

</LinearLayout>