<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.flyants.book.custom.Header
        android:id="@+id/idHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></org.flyants.book.custom.Header>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/ui_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="输入短信验证码"
            android:textColor="@color/black_text"
            android:textSize="@dimen/app_name_big_size" />
        <TextView
            android:id="@+id/view_phone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="短信验证码 已发送至 13000000000"
            android:textColor="@color/gray"
            android:textSize="@dimen/title_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_setting_height"
                android:layout_marginTop="@dimen/item_margin_top"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/sms_code_1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_sms"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/app_name_big_size" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>
                <EditText
                    android:id="@+id/sms_code_2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/app_name_big_size"
                    android:background="@drawable/login_sms" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>
                <EditText
                    android:id="@+id/sms_code_3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/app_name_big_size"
                    android:background="@drawable/login_sms" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>
                <EditText
                    android:id="@+id/sms_code_4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/app_name_big_size"
                    android:background="@drawable/login_sms" />
            </LinearLayout>

            <TextView
                android:id="@+id/view_phone_reset"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="56s 后重新发送"
                android:textColor="@color/gray"
                android:textSize="@dimen/title_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" ></View>
        <TextView
            android:id="@+id/complete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:background="@drawable/login_btn"
            android:textSize="@dimen/toolbar_size"
            android:textStyle="bold"
            android:text="下一步"/>

    </LinearLayout>

</LinearLayout>