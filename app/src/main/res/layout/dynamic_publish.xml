<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/ui_padding_small"
        android:paddingRight="@dimen/ui_padding_small"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/close_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@mipmap/close"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/small_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/temp_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black_text"
            android:text="发布新动态"
            android:textStyle="bold"
            android:textSize="@dimen/item_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/publish"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="#c6c19b"
            android:background="@drawable/mqr"
            android:text="发布"
            android:textSize="@dimen/item_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:textStyle="italic"
            android:hint="此时的感谢"
            android:textSize="@dimen/item_size"
            android:padding="@dimen/ui_padding"
            android:background="@null"
            android:gravity="left"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ui_padding"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/location"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/item_size"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:text="添加地点"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>