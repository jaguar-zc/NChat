<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@mipmap/u0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:text="飞奔的蚂蚁"
            android:textColor="@color/black_text"
            android:textSize="@dimen/toolbar_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chat_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="chat号：888888"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/people_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="这个人很懒，什么都没留下"
            android:textColor="@color/gray"
            android:textSize="@dimen/small_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/peopleAssist"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ae8" />

            <TextView
                android:id="@+id/peopleAssistCount"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="@color/black_text"
                android:textSize="@dimen/small_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/send_message"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/afo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="发消息"
                android:textColor="@color/black_text"
                android:textSize="@dimen/small_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/send_dynamic"
                android:layout_width="39dp"
                android:layout_height="50dp"
                android:src="@mipmap/ag9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="发动态"
                android:textColor="@color/black_text"
                android:textSize="@dimen/small_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/edit_people_info"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/adv" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="编辑资料"
                android:textColor="@color/black_text"
                android:textSize="@dimen/small_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin_top"
        android:background="@color/windowBackground">
    </View>


        <LinearLayout
            android:id="@+id/basic_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_padding"
            android:layout_marginRight="@dimen/ui_padding"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="资料"
                android:textColor="@color/black_text"
                android:gravity="center_vertical"
                android:textSize="@dimen/title_selected_size"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="所在地：   四川成都"
                android:textColor="@color/black_text"
                android:textSize="@dimen/item_size" />
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin_top"
        android:background="@color/windowBackground">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/ui_padding"
        android:layout_marginRight="@dimen/ui_padding"
        android:gravity="center_vertical"
        android:text="动态"
        android:textColor="@color/black_text"
        android:textSize="@dimen/title_selected_size"
        android:textStyle="bold"/>



</LinearLayout>
